@model IEnumerable<MongoStuff.Models.TripDetails>

@{
    ViewBag.Title = "Employee Details";
}
<div class="contentDiv">

    <h3 style="text-align:center">Employee Details</h3>

    <p>
        @Html.ActionLink("Add New Trip", "AddTrip")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LengthDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResortName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostPerPerson)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Img_Base64)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LengthDays)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResortName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostPerPerson)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @{
                        string img = item.Img_Base64;
                        if (!String.IsNullOrEmpty(img))
                        {
                            <img src="data:image/png;base64, @img" style="height: 200px; width: 200px;" />
                        }
                        else
                        {
                            <p>No image</p>
                        }

                    }

                    @*@Html.DisplayFor(modelItem => item.Img_Base64)*@
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>

        }

    </table>
</div>